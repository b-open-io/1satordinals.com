# Stripe API Keys
# Get these from https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...

# Printful API Key
# Get this from https://www.printful.com/dashboard/developer/api
PRINTFUL_API_KEY=your_printful_api_token

# Better Auth
# Generate secret: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-here-minimum-32-characters
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_BETTER_AUTH_URL=http://localhost:3000

# Database (Neon PostgreSQL)
# Get this from https://console.neon.tech
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# Google OAuth (for Better Auth)
# Get these from https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
